<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/radius_button_hijau_muda"
        android:paddingVertical="3dp"
        android:paddingHorizontal="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/detail_aktivitas"
            android:textAllCaps="true"
            android:fontFamily="@font/poppins_bold"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/secondary"

            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/keterangan_aktivitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="dummy"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"

                    android:text="@string/tanggal"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"

                    android:text=":"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tanggal"

                    android:text="dummy"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"

                    android:text="@string/waktu"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"

                    android:text=":"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/waktu"

                    android:text="dummy"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"

                    android:text="@string/nominal"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"

                    android:text=":"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nominal"

                    android:text="dummy"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"

                    android:text="@string/keteragan"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"

                    android:text=":"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/keterangan"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="11sp"
                        android:textColor="@color/black"/>

                </ScrollView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1,2,3,4">

                    <TableRow>
                        <TextView
                            android:layout_width="95dp"
                            android:layout_column="1"
                            android:padding="5dip"
                            android:text="@string/produk_nama"
                            android:textSize="11dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_column="2"
                            android:text="@string/jumlah_produk"
                            android:padding="2dip"
                            android:textSize="11dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_column="3"
                            android:text="Harga"
                            android:padding="3dip"
                            android:textSize="11dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_column="4"
                            android:text="Total"
                            android:padding="3dip"
                            android:textSize="11dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"/>
                    </TableRow>
                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />
                </TableLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dt_produk_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </ScrollView>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1,2,3,4">
                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />


                </TableLayout>

            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/button_kembali"
            android:layout_width="123dp"
            android:layout_height="33dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:background="@drawable/button_secondary_inactive"
            android:layout_marginBottom="5dp"

            android:text="@string/kembali"
            android:fontFamily="@font/poppins_medium"
            android:textSize="11sp"
            android:textAllCaps="false"/>


    </LinearLayout>
</LinearLayout>