<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_menu_dompet"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="9dp"
    android:paddingTop="6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="11dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:textSize="11dp"
            android:textColor="@color/black"
            android:text="@string/aktifitas_dompet"/>

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/search_tanggal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/radius_input"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/search_tanggal1_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="8sp"
                android:textColor="@color/black"
                android:text="16/07/2021"
                android:layout_marginStart="3dp"
                />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:background="@drawable/ic_calendar_green"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="3dp"/>
        </LinearLayout>
        <View
            android:layout_width="7dp"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginHorizontal="3dp"/>
        <LinearLayout
            android:id="@+id/search_tanggal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/radius_input"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/search_tanggal2_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="8sp"
                android:textColor="@color/black"
                android:text="16/07/2021"
                android:layout_marginStart="3dp"
                />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:background="@drawable/ic_calendar_green"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="3dp"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/aktivitas_dompet_recycler_view"/>

    </ScrollView>
</RelativeLayout>