<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/utama">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TAMBAH PRODUK"
            android:textColor="@color/utama_tua"
            android:textStyle="bold" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20px"
            android:background="@color/utama_muda">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/foto_produk"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@android:color/darker_gray"
                    android:cropToPadding="true"
                    android:scaleType="centerInside"
                    android:layout_marginTop="8dp"/>

                <ImageButton
                    android:id="@+id/produk_camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_camera"/>
            </LinearLayout>

            <EditText
                android:id="@+id/nama_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nama_produk"
                android:layout_marginTop="12dp"
                android:background="@drawable/radius_input"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/merk_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/merk_produk"/>

            <EditText
                android:id="@+id/harga_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/harga_produk"/>

            <EditText
                android:id="@+id/jumlah_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/jumlah_produk"/>
        </LinearLayout>
    <Button
        android:layout_width="92dp"
        android:layout_height="31dp"
        android:text="@string/simpan_produk"
        android:background="@drawable/radius_button_biru"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/Poppins_Regular"
        android:textSize="14dp"/>

</LinearLayout>