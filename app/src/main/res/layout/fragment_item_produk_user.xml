<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:id="@+id/fragment_item_produk"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@drawable/radius_daftar_toko">

        <ImageView
            android:layout_width="99dp"
            android:layout_height="65dp"
            android:background="@drawable/radius_input"
            android:scaleType="fitXY"
            android:layout_marginVertical="7dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/foto_produk"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_nama_produk"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="114dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="11dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="114dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:id="@+id/text_harga_produk"/>

        <TextView
            android:id="@+id/text_merk_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/text_nama_produk"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/secondary"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="114dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:id="@+id/text_jumlah_produk"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="55dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/jumlah_keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/keranjang"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="11sp"/>

            <ImageView
                android:id="@+id/button_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_minus"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="4dp"/>

            <ImageView
                android:id="@+id/button_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_plus"/>


        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>