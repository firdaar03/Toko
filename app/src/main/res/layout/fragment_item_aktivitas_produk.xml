<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_aktivitas_produk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:paddingVertical="10dp"
    android:paddingHorizontal="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:id="@+id/item_aktivitas">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_produk"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/keterangan_aktivitas_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penjualan"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="11dp"
            android:textColor="@color/black"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/jumlah_nominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="11dp"
            android:textColor="@color/secondary"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="17dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            >
            <TextView
                android:id="@+id/jam_aktivitas_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="8dp"
                android:text="13:25 WIB"/>
            <TextView
                android:id="@+id/tanggal_aktivitas_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="8dp"
                android:text="31/05/2021"/>
        </LinearLayout>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>