<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:paddingVertical="3dp"
        android:paddingHorizontal="3dp"
        android:background="@drawable/radius_input">

        <TextView
            android:id="@+id/button_penyetokan"
            android:layout_width="211dp"
            android:layout_height="wrap_content"

            android:background="@drawable/radius_button_ungu"
            android:text="@string/penyetokan"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textAlignment="center"

            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="17dp"/>

        <TextView
            android:id="@+id/button_produk_baru"
            android:layout_width="211dp"
            android:layout_height="wrap_content"

            android:background="@drawable/radius_button_merah_muda"
            android:text="@string/produk_baru"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textAlignment="center"

            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="17dp"/>
    </LinearLayout>
</LinearLayout>